<Window x:Class="User_Scaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:User_Scaner"
        xmlns:sp="clr-namespace:User_Scaner.Widok"
        mc:Ignorable="d"
        Title="Skaner Userów" Height="600" Width="400">


    <StackPanel >

        <Menu Background="BlanchedAlmond" Height="20" VerticalAlignment="Top">
            <MenuItem Header="Opcje">
                <MenuItem Header="Edycja listy" FontWeight="Bold" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="500">
            <StackPanel x:Name="stack"/>
        </ScrollViewer>
    </StackPanel>
</Window>
